<object name="portal_skins">
  <object
    name="copernicus_theme_templates"
    meta_type="Filesystem Directory View"
    directory="land.copernicus.theme:skins/copernicus_theme_templates"
    />

  <object
    name="copernicus_theme_images"
    meta_type="Filesystem Directory View"
    directory="land.copernicus.theme:skins/copernicus_theme_images"
    />

  <object
    name="copernicus_theme_styles"
    meta_type="Filesystem Directory View"
    directory="land.copernicus.theme:skins/copernicus_theme_styles"
    />

  <skin-path name="Copernicus Theme" based-on="Sunburst Theme">
    <layer name="copernicus_theme_templates" insert-after="custom" />
    <layer name="copernicus_theme_styles" insert-after="custom" />
  </skin-path>

  <skin-path name="*">
    <layer name="copernicus_theme_images" insert-after="custom"/>
  </skin-path>

</object>
