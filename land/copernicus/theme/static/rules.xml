<?xml version="1.0" encoding="UTF-8"?>
<rules xmlns="http://namespaces.plone.org/diazo"
       xmlns:css="http://namespaces.plone.org/diazo/css"
       xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

  <!-- REDESIGN -->
  <rules css:if-content=".section-copernicus-the-european-earth-observation-programme">
    <!-- Homepage rules -->
    <theme href="redesign-index.html" />

    <!-- General -->
    <drop theme="/html/head/meta" />
    <drop theme="/html/head/title" />
    <after content="/html/head/title" theme-children="/html/head" />
    <copy attributes="class id dir" content="/html/body" theme="/html/body" />
    <after content="/html/head/meta" theme-children="/html/head" />
    <drop css:theme=".portlet-content" />

    <!-- Top right corner menu -->
    <replace css:theme-children="div.utils ul.land-list-separated">
      <xsl:for-each css:select="#portal-siteactions li a">
        <li>
          <xsl:copy-of select="current()" />
        </li>
      </xsl:for-each>
      <xsl:for-each css:select="#portal-personaltools-wrapper li a">
        <li>
          <xsl:copy-of select="current()" />
        </li>
      </xsl:for-each>
    </replace>

    <!-- Navbar -->
    <replace css:theme-children=".navbar.navbar-default ul.nav.navbar-nav">
      <xsl:for-each css:select="#portal-globalnav li">
        <xsl:if test="not(@id = 'portaltab-user-corner')">
          <xsl:element name='li'>
            <xsl:attribute name="id">
              <xsl:value-of select="@id" />
            </xsl:attribute>
            <xsl:copy-of select="./*"/>
          </xsl:element>
        </xsl:if>
      </xsl:for-each>
    </replace>

    <!-- Footer -->
    <replace css:theme-children="footer.footer .text ul.list-inline">
      <xsl:for-each css:select="ul#copernicus-footer-info li">
        <xsl:copy-of select="current()" />
      </xsl:for-each>
    </replace>
  </rules>

  <rules css:if-not-content=".section-copernicus-the-european-earth-observation-programme">
    <!-- Simple pages rules -->
    <rules css:if-content="#visual-portal-wrapper">
      <!-- REDESIGN -->
      <theme href="redesign-simple-page.html" />

      <!-- General -->
      <drop theme="/html/head/meta" />
      <drop theme="/html/head/title" />
      <after content="/html/head/title" theme-children="/html/head" />
      <copy attributes="class id dir" content="/html/body" theme="/html/body" />
      <after content="/html/head/meta" theme-children="/html/head" />
      <drop css:content=".portlet-static-partners" />

      <!-- Top right corner menu -->
      <replace css:theme-children="div.utils ul.land-list-separated">
        <xsl:for-each css:select="#portal-siteactions li a">
          <li>
            <xsl:copy-of select="current()" />
          </li>
        </xsl:for-each>
        <xsl:for-each css:select="#portal-personaltools-wrapper li a">
          <li>
            <xsl:copy-of select="current()" />
          </li>
        </xsl:for-each>
      </replace>

      <!-- Navbar -->
      <replace css:theme-children=".navbar.navbar-default ul.nav.navbar-nav">
        <xsl:for-each css:select="#portal-globalnav li">
          <xsl:if test="not(@id = 'portaltab-user-corner')">
            <xsl:element name='li'>
              <xsl:attribute name="id">
                <xsl:value-of select="@id" />
              </xsl:attribute>
              <xsl:copy-of select="./*"/>
            </xsl:element>
          </xsl:if>
        </xsl:for-each>
      </replace>

      <!-- Footer -->
      <replace css:theme-children="footer.footer .text ul.list-inline">
        <xsl:for-each css:select="ul#copernicus-footer-info li">
          <xsl:copy-of select="current()" />
        </xsl:for-each>
      </replace>
    </rules>

    <!-- Main content -->
    <replace css:theme-children="article.main" css:content-children="#portal-column-content"/>

    <replace css:theme-children="[data-diazo='land-secondary-column']" css:content-children="#portal-column-two" />

    <!-- Breadcrumbs -->
    <replace css:theme-children="ol.breadcrumb" css:content-children="#portal-breadcrumbs" />
    <drop css:content="#portal-breadcrumbs" />

    <!-- Print page -->
    <replace css:content="#parent-fieldname-title" >
      <xsl:copy-of select="."/>
      <a href="javascript:window.print()" class="printButton">
        <img src="print.png" alt="" />Print
      </a>
    </replace>

  </rules>

</rules>

